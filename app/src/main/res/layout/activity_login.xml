<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    tools:context="invonate.cn.ecommerce.Activity.LoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="720px"
        android:gravity="center"
        android:text="永钢电子销售平台"
        android:textColor="@color/colorPrimary"
        android:textSize="70px" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginEnd="100px"
        android:layout_marginStart="100px"
        android:layout_marginTop="100px"
        android:background="@drawable/back_edit"
        android:hint="用户名"
        android:padding="30px"
        android:singleLine="true"
        android:textSize="50px" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginEnd="100px"
        android:layout_marginStart="100px"
        android:layout_marginTop="20px"
        android:background="@drawable/back_edit"
        android:hint="密    码"
        android:inputType="textPassword"
        android:padding="30px"
        android:singleLine="true"
        android:textSize="50px" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginEnd="100px"
        android:layout_marginStart="100px"
        android:layout_marginTop="30px"
        android:background="@drawable/button_register_login"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="50px" />


</LinearLayout>
