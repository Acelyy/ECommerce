<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0eff4"
    tools:context="invonate.cn.ecommerce.Activity.OfficeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="办事处分配量查询"
            android:textColor="#FFFFFF"
            android:textSize="50px" />

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="30px"
            android:gravity="center"
            android:text="查询"
            android:textColor="#FFFFFF"
            android:textSize="50px" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginStart="20px"
            android:padding="20px"
            android:src="@mipmap/pic_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#e8e7eb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginBottom="10px"
                        android:layout_marginTop="20px"
                        android:layout_marginStart="30px"
                        android:layout_marginEnd="30px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="客户办事处:"
                            android:textColor="#555555"
                            android:textSize="40px"/>

                        <TextView
                            android:id="@+id/c_office"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="客户办事处"
                            android:paddingStart="20px"
                            android:textColor="#555555"
                            android:textSize="40px"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginBottom="10px"
                        android:layout_marginTop="20px"
                        android:layout_marginStart="30px"
                        android:layout_marginEnd="30px"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提货办事处:"
                            android:textColor="#555555"
                            android:textSize="40px"/>

                        <Button
                            android:id="@+id/b_office"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:layout_marginStart="30px"
                            android:textColor="#555555"
                            android:textSize="40px"
                            android:gravity="start"
                            android:paddingStart="10px"
                            android:paddingEnd="10px"
                            android:singleLine="true"
                            android:background="@drawable/button_forget_pass"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginBottom="10px"
                        android:layout_marginTop="20px"
                        android:layout_marginStart="30px"
                        android:layout_marginEnd="30px"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提货仓库:    "
                            android:textColor="#555555"
                            android:textSize="40px"/>

                        <Button
                            android:id="@+id/cage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:layout_marginStart="30px"
                            android:textColor="#555555"
                            android:textSize="40px"
                            android:gravity="start"
                            android:paddingStart="10px"
                            android:paddingEnd="10px"
                            android:singleLine="true"
                            android:background="@drawable/button_forget_pass"/>



                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="30px"
                    android:background="#e8e7eb" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_goods"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginEnd="100px"
                android:layout_marginStart="100px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/button_register_login"
                android:text="生成订单"
                android:textColor="#FFFFFF"
                android:textSize="50px" />


        </LinearLayout>

    </ScrollView>



</LinearLayout>
