<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff4"
    android:orientation="vertical"
    tools:context="invonate.cn.ecommerce.Activity.CreateOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:textColor="#FFFFFF"
            android:textSize="50px" />


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginStart="20px"
            android:padding="20px"
            android:src="@mipmap/pic_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="#FFFFFF"
                android:padding="20px">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位名称："
                    android:textColor="#000000"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/customername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建材-线材"
                    android:textColor="#5290d4"
                    android:textSize="40px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属办事处："
                    android:textColor="#000000"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HDB400"
                    android:textColor="#5290d4"
                    android:textSize="40px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货办事处："
                    android:textColor="#000000"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/b_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HDB400"
                    android:textColor="#5290d4"
                    android:textSize="40px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货仓库："
                    android:textColor="#000000"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/cage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HDB400"
                    android:textColor="#5290d4"
                    android:textSize="40px" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="#FFFFFF">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="#FFFFFF"
                android:padding="20px"
                android:text="交货方式"
                android:textColor="#000000"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginStart="20px"
                    android:background="#e8e7eb" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="协议量年月："
                        android:textColor="#000000"
                        android:textSize="40px" />

                    <Button
                        android:id="@+id/agmonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="请选择"
                        android:layout_marginStart="10px"
                        android:textColor="#555555"
                        android:textSize="40px"
                        android:gravity="start"
                        android:paddingStart="10px"
                        android:paddingEnd="10px"
                        android:singleLine="true"
                        android:background="@drawable/button_forget_pass"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="协议量旬："
                        android:textColor="#000000"
                        android:textSize="40px" />

                    <Button
                        android:id="@+id/xun"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="请选择"
                        android:layout_marginStart="10px"
                        android:textColor="#555555"
                        android:textSize="40px"
                        android:gravity="start"
                        android:paddingStart="10px"
                        android:paddingEnd="10px"
                        android:singleLine="true"
                        android:background="@drawable/button_forget_pass"/>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="#FFFFFF"
                android:padding="20px"
                android:text="订单汇总"
                android:textColor="#000000"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginStart="20px"
                    android:background="#e8e7eb" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钢材总价："
                        android:textColor="#000000"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/gsum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-11"
                        android:textColor="#5290d4"
                        android:textSize="40px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单总价："
                        android:textColor="#000000"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HDB400"
                        android:textColor="#5290d4"
                        android:textSize="40px" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_complete"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginEnd="10px"
                    android:layout_weight="1"
                    android:background="@drawable/button_register_login"
                    android:text="保存"
                    android:textColor="#FFFFFF"
                    android:textSize="50px" />


                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_marginStart="10px"
                    android:layout_weight="1"
                    android:background="@drawable/button_forget_pass"
                    android:text="取消"
                    android:textColor="@color/colorPrimary"
                    android:textSize="50px" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
