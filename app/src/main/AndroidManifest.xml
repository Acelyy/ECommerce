<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="invonate.cn.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YGApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon3"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.OrderDetailActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".Activity.DeliverDetailActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".Activity.PersonnalActivity" />
        <activity android:name=".Activity.AgreementActivity" />
        <activity android:name=".Activity.OfficeActivity" />
        <activity android:name=".Activity.CreateOrderActivity" />
        <activity
            android:name=".Activity.CreateDeliverActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged"/>
    </application>

</manifest>